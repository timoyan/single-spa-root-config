  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/systemjs": "^6.1.1",
    "@types/webpack-env": "^1.16.2",
    "fastify": "3.21.5",
    "fastify-static": "4.2.3",
    "single-spa": "^5.9.3",
    "single-spa-layout": "1.6.0"
